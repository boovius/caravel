AppChallenge.config(['$routeProvider', '$locationProvider', function($routeProvider, $locationProvider) {
//= depend_on_asset 'home/home.html'

  $locationProvider.html5Mode(true)

  $routeProvider
  .when('/', {
    templateUrl: '<%= asset_path('home/home.html') %>',
    controller: 'HomeController'
  })
  .when('/users', {
    templateUrl: '<%= asset_path('users/index.html') %>',
    controller: 'HomeController',
    resolve: {
      users: ['UserService', '$q', function(UserService, $q) {
        var deferred = $q.defer();
        UserService.current.query(function(successData){
          deferred.resolve(successData);
        }, function(errorData){
          deferred.reject();
        })
        return deferred.promise;
      }]
    }
  })
  .otherwise({
    resolve: {
      login: ['Auth', '$window', function(Auth, $window) {
        $window.location.href = '/'
      }]
    }
  })
}])
